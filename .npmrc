registry = https://registry.npmjs.org
ignore-scripts = true

# super strict mode
auto-install-peers=false 
strict-peer-dependents=true
hoist=false

# Optimizations, less strict
dedupe-peer-dependents=true

# NOTE: default is lowest-direct
# which is best for folks that want the 
# package.json to be the source of truth
# resolution-mode=lowest-direct
resolution-mode=highest
